{
  "version": 2,
  "builds": [
    {
      "src": "/myproject/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "buildCommand": "if [ \"$VERCEL_GIT_BRANCH\" = \"main\" ]; then python manage.py makemigrations && python manage.py migrate; fi",
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/myproject/wsgi.py"
    }
  ]
}